# INSTAT Back Office Frontend - Environment Variables Example
# Copy this file to .env and update with your actual values

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Node.js Environment (development, production, staging)
NODE_ENV=production

# Application Port (for development server)
PORT=4200

# Application Base URL (where the frontend will be accessible)
APP_BASE_URL=http://localhost:4200

# ==============================================
# BACKEND API CONFIGURATION  
# ==============================================

# Backend API Base URL
# Development: http://localhost:8000
# Production: https://your-api-domain.com
API_URL=http://localhost:8000

# API Version (if versioned endpoints)
API_VERSION=v1

# API Timeout in milliseconds
API_TIMEOUT=30000

# ==============================================
# AUTHENTICATION CONFIGURATION
# ==============================================

# JWT Token Storage Key (localStorage key name)
JWT_TOKEN_KEY=instat_access_token

# JWT Refresh Token Storage Key
JWT_REFRESH_TOKEN_KEY=instat_refresh_token

# Session timeout in minutes (for automatic logout)
SESSION_TIMEOUT=30

# Enable remember me functionality (true/false)
ENABLE_REMEMBER_ME=true

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Content Security Policy settings
CSP_ENABLED=true

# HTTPS enforcement (true/false)
FORCE_HTTPS=false

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:4200,https://your-domain.com

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable console logging (true/false)
ENABLE_CONSOLE_LOGS=true

# Enable remote logging (true/false) 
ENABLE_REMOTE_LOGGING=false

# Remote logging endpoint
REMOTE_LOG_ENDPOINT=

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable form generator feature (true/false)
ENABLE_FORM_GENERATOR=true

# Enable user management features (true/false)
ENABLE_USER_MANAGEMENT=true

# Enable file upload features (true/false)
ENABLE_FILE_UPLOAD=true

# Enable advanced survey features (true/false)
ENABLE_ADVANCED_SURVEYS=true

# Enable dashboard analytics (true/false)
ENABLE_DASHBOARD_ANALYTICS=true

# ==============================================
# UI/UX CONFIGURATION
# ==============================================

# Application theme (light, dark, auto)
DEFAULT_THEME=light

# Default language (en, fr, etc.)
DEFAULT_LANGUAGE=en

# Items per page for pagination
DEFAULT_PAGE_SIZE=10

# Maximum file upload size in MB
MAX_FILE_SIZE_MB=10

# Supported file types for upload (comma-separated)
SUPPORTED_FILE_TYPES=.xlsx,.xls,.csv,.json

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================

# Enable service worker for caching (true/false)
ENABLE_SERVICE_WORKER=true

# Cache expiration time in minutes
CACHE_EXPIRATION_MINUTES=60

# Enable lazy loading (true/false)
ENABLE_LAZY_LOADING=true

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Google Analytics ID (if using GA)
GOOGLE_ANALYTICS_ID=

# Sentry DSN for error tracking
SENTRY_DSN=

# Enable performance monitoring (true/false)
ENABLE_PERFORMANCE_MONITORING=false

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Build output directory
BUILD_OUTPUT_PATH=dist/instat-backoffice

# Base href for deployment (e.g., /instat-backoffice/)
BASE_HREF=/

# Enable production optimizations (true/false)
ENABLE_PRODUCTION_OPTIMIZATIONS=true

# Enable source maps in production (true/false)
ENABLE_PRODUCTION_SOURCE_MAPS=false

# ==============================================
# EXTERNAL SERVICES
# ==============================================

# External documentation URL
DOCUMENTATION_URL=https://docs.instat-platform.com

# Support/Help URL
SUPPORT_URL=https://support.instat-platform.com

# Terms of service URL
TERMS_URL=https://instat-platform.com/terms

# Privacy policy URL
PRIVACY_URL=https://instat-platform.com/privacy

# ==============================================
# DATABASE/STORAGE CONFIGURATION
# ==============================================

# Local storage quota in MB
LOCAL_STORAGE_QUOTA_MB=50

# Enable offline mode support (true/false)
ENABLE_OFFLINE_MODE=false

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Enable development tools (true/false)
ENABLE_DEV_TOOLS=false

# Enable mock data for development (true/false)
ENABLE_MOCK_DATA=false

# Development server proxy configuration
DEV_PROXY_ENABLED=false
DEV_PROXY_TARGET=http://localhost:8000

# Hot reload enabled (true/false)
HOT_RELOAD_ENABLED=true

# ==============================================
# TESTING CONFIGURATION
# ==============================================

# Enable test mode features (true/false)
TEST_MODE=false

# Test data generation seed
TEST_DATA_SEED=12345

# ==============================================
# DOCKER/CONTAINERIZATION
# ==============================================

# Container port binding
CONTAINER_PORT=80

# Health check endpoint
HEALTH_CHECK_ENDPOINT=/health

# ==============================================
# REVERSE PROXY CONFIGURATION
# ==============================================

# Trust proxy headers (true/false)
TRUST_PROXY=false

# X-Forwarded headers to trust
TRUSTED_HEADERS=x-forwarded-for,x-forwarded-proto,x-forwarded-host

# ==============================================
# SSL/TLS CONFIGURATION
# ==============================================

# SSL certificate path (if using HTTPS)
SSL_CERT_PATH=

# SSL private key path (if using HTTPS)
SSL_KEY_PATH=

# SSL CA certificate path (if using custom CA)
SSL_CA_PATH=